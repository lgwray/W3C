<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.school.activity.LoginViewActivity" >

   <FrameLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:background="@color/topbar_bg"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/title_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="密码修改"
            android:textColor="#fff"
            android:textSize="18sp"
            android:textStyle="bold" />

     
            <ImageView
                android:id="@+id/title_img"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_alignParentLeft="true"
                android:contentDescription="@null"
                android:onClick="back"
                android:gravity="center_vertical"
                android:src="@drawable/ic_menu_back" />
    </FrameLayout>
   <EditText 
       android:id="@+id/row_password"
       style="@style/login_text_view"
       android:layout_below="@id/title"
       android:hint="请输入原密码"
       android:inputType="textPassword"
       />
   <EditText 
       android:id="@+id/new_password"
       style="@style/login_text_view"
       android:layout_below="@id/row_password"
       android:hint="请输入新密码"
       android:inputType="textPassword"
       />
   <EditText 
       android:id="@+id/again_password"
       style="@style/login_text_view"
       android:layout_below="@id/new_password"
       android:hint="再次确认密码"
       android:inputType="textPassword"
       />
   
   <Button 
       android:id="@+id/sure"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:background="@drawable/login_btn_bg2"
       android:text="确定"
       android:layout_marginTop="20dp"
       android:layout_marginLeft="10dp"
       android:layout_marginRight="10dp"
       android:layout_below="@id/again_password"
       />
   

</RelativeLayout>
