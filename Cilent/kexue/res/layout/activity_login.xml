<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

   <FrameLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:background="@color/topbar_bg"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/title_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="登录"
            android:textColor="#fff"
            android:textSize="18sp"
            android:textStyle="bold" />

     
            <ImageView
                android:id="@+id/title_img"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_alignParentLeft="true"
                android:contentDescription="@null"
                android:onClick="back"
                android:gravity="center_vertical"
                android:src="@drawable/ic_menu_back" />
    </FrameLayout>

    <EditText
        android:id="@+id/login_user"
        style="@style/login_text_view"
        android:layout_below="@id/title"
        android:hint="用户账号" />

    <EditText
        android:id="@+id/login_password"
        style="@style/login_text_view"
        android:layout_below="@id/login_user"
        android:hint="密码"
        android:inputType="textPassword" />

    <RelativeLayout
        android:id="@+id/login_chk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_password"
        android:layout_marginTop="25dp" >

        <CheckBox
            android:id="@+id/remember"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="30dp"
            android:checked="true"
            android:text="记住密码"
            android:textColor="#000"
            android:textSize="@dimen/login_font" />

        <CheckBox
            android:id="@+id/selflogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:checked="true"
            android:text="自动登录"
            android:textColor="#000"
            android:textSize="@dimen/login_font" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_chk"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/registe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/login_btn_bg"
            android:text="注册" />

        <Button
            android:id="@+id/login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/login_btn_bg"
            android:text="登录" />
    </LinearLayout>

    <!-- <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/qq"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:padding="5dp"
            android:text="使用QQ账号登录"
            android:textColor="#696969" />
    </LinearLayout> -->

</RelativeLayout>